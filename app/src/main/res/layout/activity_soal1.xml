<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    tools:context=".modul2.soal1.Soal1Activity">


    <TextView

        android:textColor="#302c2c"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manakah kota dibawah ini yang merupakan ibu kota propinsi ?" />


    <CheckBox
        android:layout_marginTop="10dp"
        android:id="@+id/bandung"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bandung" />

    <CheckBox
        android:id="@+id/bogor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bogor" />

    <CheckBox
        android:id="@+id/banjarmasin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Banjarmasin" />

    <CheckBox
        android:id="@+id/bontang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bontang" />


    <Button
        android:id="@+id/simpan"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:background="@color/colorPrimary"
        android:textColor="#fff"
        android:text="Simpan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/nilai1"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



</LinearLayout>